generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cidades {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Animais {
  id                Int         @id @default(autoincrement())
  name              String?
  ultimaLocalizacao String
  encontrado        Boolean?
  users             Users       @relation(fields: [id], references: [id])
  mensagens         Mensagens[]
}

model Users {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  bairro    String
  rua       String
  password  String
  animais   Animais?
  cidade    String
  uf        String
  mensagens Mensagens?
}

model Mensagens {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  animaisId Int?
  Animais   Animais? @relation(fields: [animaisId], references: [id])
  author    Users    @relation(fields: [id], references: [id])
}
