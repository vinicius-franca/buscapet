generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cidade {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  Users  Users[]
  Animal Animal[]
}

model Animal {
  id         Int         @id @default(autoincrement())
  name       String?
  foto       String?
  encontrado Boolean?
  userId     Int?
  user       Users?      @relation(fields: [userId], references: [id])
  mensagens  Mensagens[]
  rua        String?
  numero     String?
  cidade     Cidade?     @relation(fields: [cidadeId], references: [id])
  cidadeId   Int?
  bairro     String?
}

model Users {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  bairro    String
  rua       String
  password  String
  uf        String
  cidade    Cidade?     @relation(fields: [cidadeId], references: [id])
  animals   Animal[]
  mensagens Mensagens[]
  cidadeId  Int?
}

model Mensagens {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  animalId  Int?
  Animais   Animal?  @relation(fields: [animalId], references: [id])
  author    Users    @relation(fields: [id], references: [id])
}
