generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cidade {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  Users Users[]
}

model Animal {
  id                Int         @id @default(autoincrement())
  name              String?
  ultimaLocalizacao String
  encontrado        Boolean?
  users             Users       @relation(fields: [id], references: [id])
  mensagens         Mensagens[]
}

model Users {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  bairro    String
  rua       String
  password  String
  uf        String
  cidade    Cidade?     @relation(fields: [cidadeId], references: [id])
  animais   Animal[]
  mensagens Mensagens[]
  cidadeId  Int?
}

model Mensagens {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  animalId  Int?
  Animais   Animal?  @relation(fields: [animalId], references: [id])
  author    Users    @relation(fields: [id], references: [id])
}
